<div id="citas">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div id="citas_izq">
          <ul>
            <%= link_to citas_path do %>
            <li>
              <h4 class="<%= 'active' if current_page?(citas_path) %>">Todas las citas</h4>
            </li>
            <% end %>

            <%= link_to por_confirmar_path do %>
            <li>
              <h4 class="<%= 'active' if current_page?(por_confirmar_path) %>">Citas por confirmar</h4>
            </li>
            <% end %>
            <% @providers.each do |provider|%>
            <%= link_to provider_appointments_path(provider) do %>
            <li>
              <h4 class= "<%= 'active' if current_page?(provider_appointments_path(provider)) %>"><%= provider.nombre %></h4>
            </li>
            <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <div id="citas_der">
          <!-- tab -->
<div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Fecha Inicio</th>
                <th>Fecha Final</th>
                <th>Proveedor</th>
                <th>Nombre</th>
                <th>Evento</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Status</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @appointments.each do |appointment| %>
              <tr>
                <td><%= appointment.start %></td>
                <td><%= appointment.end %></td>
                <td><%= appointment.provider.nombre %></td>
                <td><%= appointment.title %></td>
                <td><%= appointment.evento %></td>
                <td><%= appointment.correo %></td>
                <td><%= appointment.telefono %></td>
                <td><%= appointment.status_one %></td>
                <td><%= link_to 'Ver mÃ¡s', provider_appointment_path(appointment.provider_id, appointment) %></td>
                 <td><%= link_to 'Editar', edit_provider_appointment_path(appointment.provider_id, appointment) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
          <!--  -->
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="center">
  <%= will_paginate @appointments %>
  </div>
</div>


<script>

$(function() { // document ready
  $('#calendar').fullCalendar({
    defaultView: 'agendaWeek',
    header: {
      left: 'prev,next today',
      center: 'title',
      right: 'agendaDay,agendaTwoDay,agendaWeek,month'
    },
    allDaySlot: false,
    resources: [
    { id: 'a', title: '<%=@appointments.last.provider.try(:nombre) %>' }
    ],
    events: '/providers/<%=@appointments.last.provider.try(:slug) %>/appointments.json'
  });  
});

</script>
