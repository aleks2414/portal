<% if @event_attachments %>

	<div class="row">
		<% @event_attachments.each do |event_attachment| %>		
			<div class="col-md-4">
				<div class="panel panel-default">
				  <div class="panel-heading preview">
				  	<%= image_tag event_attachment.image.url() %>
				  </div>
				  <div class="panel-body">
				  	<span class="pull-right">
				  		<%= link_to event_attachment, remote: true, method: :delete, data: {confirm: "Are you sure?"} do %>
					  		<i class="fa fa-times fa-lg"></i>
				  		<% end %>
				  	</span>
				  </div>
				</div>
			</div>
		<% end %>			
	</div>

<% end %>