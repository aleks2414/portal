<div class="container">
<div id="calendar"></div>
</div>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Provider</th>
      <th>Servicio tienda</th>
      <th>Servicio domicilio</th>
      <th>Title</th>
      <th>Evento</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Status one</th>
      <th>Status two</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.start %></td>
        <td><%= appointment.end %></td>
        <td><%= appointment.provider.nombre %></td>
        <td><%= appointment.servicio_tienda %></td>
        <td><%= appointment.servicio_domicilio %></td>
        <td><%= appointment.title %></td>
        <td><%= appointment.evento %></td>
        <td><%= appointment.correo %></td>
        <td><%= appointment.telefono %></td>
        <td><%= appointment.direccion %></td>
        <td><%= appointment.status_one %></td>
        <td><%= appointment.status_two %></td>
        <td><%= link_to 'Show', provider_appointment_path(@provider, appointment) %></td>
        <td><%= link_to 'Edit', edit_provider_appointment_path(@provider, appointment) %></td>
        <td><%= link_to 'Destroy', provider_appointment_path(@provider, appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_provider_appointment_path %>



<script>

$(function() { // document ready
  $('#calendar').fullCalendar({
    defaultView: 'agendaWeek',
header: {
        left: 'prev,next today',
        center: 'title',
        right: 'agendaDay,agendaTwoDay,agendaWeek,month'
      },
    allDaySlot: false,
    resources: [
        { id: 'a', title: '<%=@appointments.last.provider.nombre %>' }
    ],
    events: '/providers/<%=@appointments.last.provider.slug %>/appointments.json'
  });  
});

</script>