<body>

<% if alert %>
  <p class="alert"><%= alert %></p>
<% elsif notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<div id="home_nav">
<div class="container">
            <div class="brand">
              <%= link_to root_path do%>
                <%=image_tag "logo2.png"%>
              <% end %>
            </div>

            <!-- START Responsive Menu HTML -->
            <div class="rm-container">
                <a class="rm-toggle rm-button rm-nojs" href="#">Menu</a>

                <nav class="rm-nav rm-nojs rm-lighten">
                    <ul>
                        <li><a href="<%= providers_path %>">Proveedores</a></li>
                        <li><a href="<%=events_path%>">Eventos Reales</a></li>
                        <li><a href="https://medium.com/portal-de-bodas">Inspírate</a></li>
                        <li><a href="<%=nosotros_path%>">Nosotros</a></li>
                        <li><a href="<%=new_contact_path %>">Contacto</a></li>
                        <% if user_signed_in? %>
                        <li><%=link_to "Citas", citas_path %></li>
                        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                        <% end %>
                    </ul>
                </nav>
            </div><!-- .rm-container -->
            <!-- End Responsive Menu HTML -->
</div>
</div>

<div id="content">
<%= yield %>
</div>

