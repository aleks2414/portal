       </div>

       <div class="col-md-2 col-xs-6">
        <div id="footer_left">
           <h4>__ </h4>
        <% @providers3.each do |provider| %>
          <%= link_to provider do %>
          <p><%= provider.nombre %></p>
          <% end %>
        <% end %>
        </div>
       </div>

       <div class="col-md-2 col-xs-6">
        <div id="footer_left">
           <h4>Portal de Bodas</h4>
           <%= link_to events_path do %>
           <p>Eventos Reales</p>
           <% end %>
           <%= link_to "https://medium.com/portal-de-bodas" do %>
           <p>Blog</p>
           <% end %>
