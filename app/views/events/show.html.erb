<div class="container">
  <div id="magici">
<div id="comments">
  <%= form_for [@event, @comment] do |f| %>

      <div class="row">
      <div class="col-sm-6">
      <div class="field">
        <%= f.label :Nombre %><br>
        <%= f.text_field :nombre, required:true  %>
      </div>
      </div>
      </div>

      
      <div class="field">
        <%= f.label :mensaje %><br>
        <%= f.text_area :mensaje, required:true  %>
      </div>
      
      <div class="row"> 
      <div class="col-xs-4">
      <div class="field">
        <%= f.label :servicio %><br>
        <div id="star-rating1"></div>
      </div>
      </div>
      </div>

<br><br>
      <div class="actions">
        <%= f.submit "Añadir Comentario", class: "button button_yellow" %> <br><br>
      </div>

  <% end %>

  </div>
  </div>
</div>



<div class="container">
  <div id="magici">
  <% @comments.each_with_index do |comment, i| %>
  <div class="col-sm-6">
  <div id="cuadro">
  <h3><%= comment.nombre %></h3>
  <p class="down"><%= comment.try(:mensaje).truncate(250) %></p>
  
  <div class="row">
  
  <div class="col-xs-4">
  <p>Servicio:</p>
  <h6 class="star-rating" data-score=<%=comment.rating%>> </h6>
</div>
  
  </div>
  <% if current_user %>
  <br>
  <%= link_to "Eliminar Comentario", event_comment_path(@event, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  </div>
  </div>
  <% end %>
</div>
</div>

<div class="container">
  <div class="center">
  <%= will_paginate @comments %>
  </div>
</div>


<div class="container">
<% if current_user %>
<%= link_to 'Editar Evento', edit_event_path(@event) %>
<% end %>
</div>



